<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.miracosta.cs112.finalproject.finalproject.controller.LibraryController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="searchField" promptText="Search by title or consoleâ€¦" HBox.hgrow="ALWAYS" />
            <Button onAction="#onAddGame" text="Add" />
            <Button fx:id="editButton" disable="true" onAction="#onEditGame" text="Edit" />
            <Button fx:id="deleteButton" disable="true" onAction="#onDeleteGame" text="Delete" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="gameTable">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="163.0" text="Title" />
                <TableColumn fx:id="consoleColumn" prefWidth="102.0" text="Console" />
                <TableColumn fx:id="genresColumn" prefWidth="135.0" text="Genres" />
                <TableColumn fx:id="releaseDateColumn" prefWidth="100" text="Release Date" />
                <TableColumn fx:id="hoursPlayedColumn" prefWidth="100" text="Hours Played" />
                <TableColumn fx:id="completedColumn" prefWidth="80" text="Completed" />
                <TableColumn fx:id="completeCopyColumn" prefWidth="100" text="Complete Copy" />
                <TableColumn fx:id="pricePaidColumn" prefWidth="80" text="Price Paid" />
                <TableColumn fx:id="marketValueColumn" prefWidth="102.0" text="Price Charting Value" />
            </columns>
        </TableView>
    </center>
   <left>
      <VBox prefHeight="400.0" prefWidth="191.0" BorderPane.alignment="CENTER" />
   </left>

</BorderPane>
