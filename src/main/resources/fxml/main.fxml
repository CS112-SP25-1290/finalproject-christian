<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.miracosta.cs112.finalproject.finalproject.controller.MainController">

    <!-- left sidebar -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="showAllButton"    text="All Games"    onAction="#onShowAll"/>
            <Button fx:id="showPS5Button"    text="PS5"          onAction="#onShowPS5"/>
            <Button fx:id="showSwitchButton" text="Switch"       onAction="#onShowSwitch"/>
            <!-- add more platform buttons here -->
        </VBox>
    </left>

    <!-- center: scrollable grid of cover-art thumbnails -->
    <center>
        <TilePane fx:id="coverTilePane"
                  hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </TilePane>
    </center>

</BorderPane>

