<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.miracosta.cs112.finalproject.finalproject.controller.MainController">

    <!-- left sidebar -->
    <left>
        <VBox prefHeight="4932.0" prefWidth="274.0" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="showAllButton" onAction="#onShowAll" text="All Games" />
            <Button fx:id="showPS5Button" onAction="#onShowPS5" text="PS5" />
            <Button fx:id="showSwitchButton" onAction="#onShowSwitch" text="Switch" />
            <!-- add more platform buttons here -->
        </VBox>
    </left>

    <!-- center: scrollable grid of cover-art thumbnails -->
    <center>
        <TilePane fx:id="coverTilePane" hgap="10" vgap="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </TilePane>
    </center>

</BorderPane>
